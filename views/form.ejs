<!DOCTYPE html>
<html>
<body>
    <h1>Guestbook</h1>
    
    <form action="/" method="POST">
        <input type="text" name="name" required>
        <textarea name="message" required></textarea>
        <button type="submit">Submit</button>
    </form>

    <h2>Entries:</h2>
    <% entries.forEach(entry => { %>
        <div>
            <strong><%= entry.name %></strong>
            <p><%= entry.message %></p>
        </div>
    <% }) %>
</body>
</html>